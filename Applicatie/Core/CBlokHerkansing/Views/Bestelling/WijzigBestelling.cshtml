@model CBlokHerkansing.ViewModels.Bestelling.BestelBaseViewModel

@{
    ViewBag.Title = "WijzigBestelling";
}

@using (Html.BeginForm("wijzigBestelling", "Bestelling"))
{
    <div class="container">
        <div class="row">
            <div class="col-sm-6 col-md-6 col-md-offset-4">
                @if (Model != null)
                {
                    @Html.ValidationSummary(true)
                    <form class="form-horizontal">
                        <h1 class="text-center login-title">Wijzig bestel status</h1>
                        @Html.HiddenFor(m => m.bestelling.BestellingId)
                        @Html.HiddenFor(m => m.bestelling.BezorgTijd)
                        @Html.HiddenFor(m => m.bestelling.BestelDatum)
                        <div class="form-group">
                            <label for="inputEmail3" class="col-sm-2 control-label">Status</label>
                            <div class="col-sm-10">
                                @Html.DropDownListFor(m => m.SelectedStatus, Model.listStatus, new { @class = "form-control" })
                                <div style="color: red">
                                    @Html.ValidationMessageFor(model => model.SelectedStatus)
                                </div>
                            </div>
                        </div>
                        <div class="form-group">
                            <div class="col-sm-offset-2 col-sm-10">
                                <button type="submit" class="btn btn-default">Update</button>
                            </div>
                        </div>
                    </form>
                }
            </div>
        </div>
    </div>
}

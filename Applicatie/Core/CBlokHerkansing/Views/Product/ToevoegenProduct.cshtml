@model CBlokHerkansing.Models.Product.ProductBase
@{
    ViewBag.Title = "ToevoegenProduct";
}
@{
    List<Object> list = new List<Object>();
    foreach (CBlokHerkansing.Models.Categorie item in ViewBag.Categorieen)
{
    list.Add(new { value = item.Id, text = item.Naam });
}
}
<div class="row">
    <div class="col-md-4"></div>
    <div class="col-md-4"><h2>ToevoegenProduct</h2></div>
    <div class="col-md-4"></div>

</div>
<div class="row">
    <div class="col-md-4"></div>
<div class="col-md-4">
    @using (Html.BeginForm("ToevoegenProduct", "Product", FormMethod.Post, new { enctype = "multipart/form-data", @class = "form-control" }))
    {
        <div class="form-group">
            <label for="inputPassword3" class="col-sm-4 control-label">Naam</label>
            <div class="col-sm-6">
                @Html.TextBoxFor(model => model.Naam, new { placeholder = "Naam van het product", @class = "form-control" })
                <div style="color: red">
                    @Html.ValidationMessageFor(model => model.Naam)
                </div>
            </div>
        </div>
        <div class="form-group">
            <label for="inputPassword3" class="col-sm-4 control-label">Omschrijving</label>
            <div class="col-sm-6">
                @Html.TextAreaFor(model => model.Omschrijving, new { placeholder = "omschrijving van het product", @class = "form-control" })
                <div style="color: red">
                    @Html.ValidationMessageFor(model => model.Omschrijving)
                </div>
            </div>
        </div>
    <div class="form-group">
        <label for="inputPassword3" class="col-sm-4 control-label">Categorie</label>
        <div class="col-sm-6">
            @Html.DropDownListFor(model => model.CategorieId, new SelectList(
                  list,
                  "value",
                  "text",
                   2))
        </div>
    </div>
    <div class="form-group">
        <label for="inputPassword3" class="col-sm-4 control-label">Afbeelding</label>
        <div class="col-sm-6">
            <input type="file" name="File" id="File" style="width: 100%" />

        </div>
    </div>
        <button class="btn btn-lg btn-primary btn-block" type="submit">
            Voeg product toe
        </button>
    
    }
    </div>
    <div class="col-md-4"></div>
</div>

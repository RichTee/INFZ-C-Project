@model CBlokHerkansing.Models.Product.ProductAanbieding

@{
    ViewBag.Title = "ToevoegenProductAanbieding";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@using (Html.BeginForm("ToevoegenProductAanbieding", "Product"))
{
    <div class="container">
        <div class="row">
            <div class="col-sm-6 col-md-6 col-md-offset-4">
                <form class="form-horizontal">
                    <h1 class="text-center login-title">Vul gegevens in om een aanbieding toe te voegen.</h1>
                    <div class="form-group">
                        <label for="inputPassword3" class="col-sm-4 control-label">Begin Datum</label>
                        <div class="col-sm-6">
                            @Html.TextBoxFor(model => model.BeginDatum, new { placeholder = "Begin Datum", @class = "form-control datepicker" })
                            <div style="color: red">
                                @Html.ValidationMessageFor(model => model.BeginDatum)
                            </div>
                        </div>
                    </div>
                    <div class="form-group">
                        <label for="inputPassword3" class="col-sm-4 control-label">Eind Datum</label>
                        <div class="col-sm-6">
                            @Html.TextBoxFor(model => model.EindDatum, new { placeholder = "Eind Datum", @class = "form-control datepicker" })
                            <div style="color: red">
                                @Html.ValidationMessageFor(model => model.EindDatum)
                            </div>
                        </div>
                    </div>
                    <div class="form-group">
                        <label for="inputEmail3" class="col-sm-4 control-label">Kortingspercentage</label>
                        <div class="col-sm-6">
                            @Html.TextBoxFor(model => model.KortingsPercentage, new { placeholder = "KortingsPercentage", @class = "form-control" })
                            <div style="color: red">
                                @Html.ValidationMessageFor(model => model.KortingsPercentage)
                            </div>
                        </div>
                    </div>
                    <div class="form-group">
                        <div class="col-sm-offset-2 col-sm-10">
                            <button type="submit" class="btn btn-default">Update</button>
                        </div>
                    </div>
                </form>
            </div>
        </div>
    </div>
}
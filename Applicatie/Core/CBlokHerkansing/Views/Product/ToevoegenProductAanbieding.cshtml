@model CBlokHerkansing.Models.Product.ProductAanbieding

@{
    ViewBag.Title = "ToevoegenProductAanbieding";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<script type="text/javascript">
    $(document).ready(function () {
        $(".2").datepicker({
                dateFormat: "dd/mm/yy",
                showStatus: true,
                showWeeks: true,
                highlightWeek: true,
                numberOfMonths: 1,
                showAnim: "scale",
                showOptions: {
                    origin: ["top", "left"]
                }
          });
    });
</script>

<h2>ToevoegenProductAanbieding</h2>

@using (Html.BeginForm("ToevoegenProductAanbieding", "Product"))
{
   
    <div class="container">
        <div class="row">
            <div class="col-sm-6 col-md-6 col-md-offset-4">
                    <input type="hidden" value="@Model.AanbiedingId" name="id" />
                    <form class="form-horizontal">
                        <h1 class="text-center login-title">Vul gegevens in om een aanbieding toe te voegen.</h1>
                        <div class="form-group">
                            <label for="inputPassword3" class="col-sm-2 control-label">Begin Datum</label>
                            <div class="col-sm-10">
                                @Html.TextBoxFor(model => model.BeginDatum, new { placeholder = "Begin Datum", @class = "form-control 2" })
                                <div style="color: red">
                                    @Html.ValidationMessageFor(model => model.BeginDatum)
                                </div>
                            </div>
                        </div>
                        <div class="form-group">
                            <label for="inputPassword3" class="col-sm-2 control-label">Eind Datum</label>
                            <div class="col-sm-10">
                                @Html.TextBoxFor(model => model.EindDatum, new { placeholder = "Eind Datum", @class = "form-control 2" })
                                <div style="color: red">
                                    @Html.ValidationMessageFor(model => model.EindDatum)
                                </div>
                            </div>
                        </div>
                        <div class="form-group">
                            <label for="inputEmail3" class="col-sm-2 control-label">Kortingspercentage</label>
                            <div class="col-sm-10">
                                @Html.TextBoxFor(model => model.KortingsPercentage, new { placeholder = "KortingsPercentage", @class = "form-control" })
                                <div style="color: red">
                                    @Html.ValidationMessageFor(model => model.KortingsPercentage)
                                </div>
                            </div>
                        </div>
                        <div class="form-group">
                            <div class="col-sm-offset-2 col-sm-10">
                                <button type="submit" class="btn btn-default">Update</button>
                            </div>
                        </div>
                    </form>
            </div>
        </div>
    </div>
}
@model CBlokHerkansing.Models.Product.ProductDetail
@{
    ViewBag.Title = "ToevoegenProductDetail";
}
@ViewBag.ProductId
    <h2 class="text-center login-title">ToevoegenProductDetail</h2>
    @using (Html.BeginForm("ToevoegenProductDetail", "Product", FormMethod.Post))
    {
        <div class="container">
            <div style="visibility: hidden">
                @Html.TextBoxFor(model => model.productId, new { @Value = ViewBag.ProductId })
            </div>
            <div class="row">
                <div class="col-sm-6 col-md-6 col-md-offset-4">
                    <form class="form-horizontal">
                        <h1 class="text-center login-title">Vul gegevens in om een product detail toe te voegen.</h1>
                        <div class="form-group">
                            <label for="inputPassword3" class="col-sm-4 control-label">Verkoopprijs</label>
                            <div class="col-sm-6">
                                @Html.TextBoxFor(model => model.verkoopprijs, new { placeholder = "Verkoopprijs", @class = "form-control" })
                                <div style="color: red">
                                    @Html.ValidationMessageFor(model => model.verkoopprijs)
                                </div>
                            </div>
                        </div>
                        <div class="form-group">
                            <label for="inputPassword3" class="col-sm-4 control-label">Inkoopprijs</label>
                            <div class="col-sm-6">
                                @Html.TextBoxFor(model => model.inkoopprijs, new { placeholder = "Inkoopprijs", @class = "form-control" })
                                <div style="color: red">
                                    @Html.ValidationMessageFor(model => model.inkoopprijs)
                                </div>
                            </div>
                        </div>
                        <div class="form-group">
                            <label for="inputEmail3" class="col-sm-4 control-label">Maat</label>
                            <div class="col-sm-6">
                                @Html.DropDownListFor(model => model.maatId, new SelectList(new List<Object>
                           {
                               new { value = 1, text = "small" },
                               new { value = 2, text = "medium" },
                               new { value = 3, text = "large" }
                           },"Value", "text"), new { @class = "form-control" })
                                <div style="color: red">
                                    @Html.ValidationMessageFor(model => model.maatId)
                                </div>
                            </div>
                        </div>
                        <div class="form-group">
                            <label for="inputEmail3" class="col-sm-4 control-label">Voorraad</label>
                            <div class="col-sm-6">
                                @Html.TextBoxFor(model => model.voorraad, new { placeholder = "Voorraad", @class = "form-control" })
                                <div style="color: red">
                                    @Html.ValidationMessageFor(model => model.voorraad)
                                </div>
                            </div>
                            
                        </div>
                    </form>
                    <button type="submit" class="btn btn-default">Toevoegen</button>
                </div>
            </div>
        </div>
    }
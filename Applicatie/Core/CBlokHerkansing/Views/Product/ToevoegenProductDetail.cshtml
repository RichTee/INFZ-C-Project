@model CBlokHerkansing.ViewModels.Product.ToevoegenProductDetailViewModel

@{
    ViewBag.Title = "ToevoegenProductDetail";
}

<h2 class="text-center login-title">ToevoegenProductDetail</h2>

@using (Html.BeginForm("ToevoegenProductDetail", "Product"))
{
    <div class="container">
        <div class="row">
            <div class="col-sm-6 col-md-6 col-md-offset-4">
                <form class="form-horizontal">
                    <h1 class="text-center login-title">Vul gegevens in om een product detail toe te voegen.</h1>
                    <div class="form-group">
                        <label for="inputEmail3" class="col-sm-4 control-label">Product</label>
                        <div class="col-sm-6">
                            @Html.DropDownListFor(m => m.SelectedProduct, Model.listProduct, new { @class = "form-control" })
                            <div style="color: red">
                                @Html.ValidationMessageFor(model => model.SelectedProduct)
                            </div>
                        </div>
                    </div>
                    <div class="form-group">
                        <label for="inputPassword3" class="col-sm-4 control-label">Verkoopprijs</label>
                        <div class="col-sm-6">
                            @Html.TextBoxFor(model => model.productDetail.verkoopprijs, new { placeholder = "Verkoopprijs", @class = "form-control" })
                            <div style="color: red">
                                @Html.ValidationMessageFor(model => model.productDetail.verkoopprijs)
                            </div>
                        </div>
                    </div>
                    <div class="form-group">
                        <label for="inputPassword3" class="col-sm-4 control-label">Inkoopprijs</label>
                        <div class="col-sm-6">
                            @Html.TextBoxFor(model => model.productDetail.inkoopprijs, new { placeholder = "Inkoopprijs", @class = "form-control" })
                            <div style="color: red">
                                @Html.ValidationMessageFor(model => model.productDetail.inkoopprijs)
                            </div>
                        </div>
                    </div>
                    <div class="form-group">
                        <label for="inputEmail3" class="col-sm-4 control-label">Maat</label>
                        <div class="col-sm-6">
                            @Html.DropDownListFor(m => m.SelectedMaat, Model.listMaat, new { @class = "form-control" })
                            <div style="color: red">
                                @Html.ValidationMessageFor(model => model.SelectedMaat)
                            </div>
                        </div>
                    </div>
                    <div class="form-group">
                        <label for="inputEmail3" class="col-sm-4 control-label">Voorraad</label>
                        <div class="col-sm-6">
                            @Html.TextBoxFor(model => model.productDetail.voorraad, new { placeholder = "Voorraad", @class = "form-control" })
                            <div style="color: red">
                                @Html.ValidationMessageFor(model => model.productDetail.voorraad)
                            </div>
                        </div>
                    </div>
                    <div class="form-group">
                        <div class="col-sm-offset-2 col-sm-10">
                            <button type="submit" class="btn btn-default">Toevoegen</button>
                        </div>
                    </div>
                </form>
            </div>
        </div>
    </div>
}
@model CBlokHerkansing.Models.Product.ProductAanbieding

@{
    ViewBag.Title = "WijzigProductAanbieding";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@using (Html.BeginForm("WijzigProductAanbieding", "Product"))
{
    <div class="container">
        <div class="row">
            <div class="col-sm-6 col-md-6 col-md-offset-4">
                @if (Model != null)
                {
                    @Html.ValidationSummary(true)
                    <form class="form-horizontal">
                        <input type="hidden" value="@Model.AanbiedingId" name="AanbiedingId" />
                        <h1 class="text-center login-title">Aanbieding gegevens wijzigen</h1>
                        <div class="form-group">
                            <label for="inputEmail3" class="col-sm-4 control-label">Begin datum</label>
                            <div class="col-sm-6">
                                @Html.TextBoxFor(model => model.BeginDatum, new { placeholder = "BeginDatum", @class = "form-control datepicker" })
                                <div style="color: red">
                                    @Html.ValidationMessageFor(model => model.BeginDatum)
                                </div>
                            </div>
                        </div>
                        <div class="form-group">
                            <label for="inputPassword3" class="col-sm-4 control-label">Eind datum</label>
                            <div class="col-sm-6">
                                @Html.TextBoxFor(model => model.EindDatum, new { placeholder = "EindDatum", @class = "form-control datepicker" })
                                <div style="color: red">
                                    @Html.ValidationMessageFor(model => model.EindDatum)
                                </div>
                            </div>
                        </div>
                        <div class="form-group">
                            <label for="inputPassword3" class="col-sm-4 control-label">Kortingspercentage</label>
                            <div class="col-sm-6">
                                @Html.TextBoxFor(model => model.KortingsPercentage, new { placeholder = "Kortingspercentage", @class = "form-control" })
                                <div style="color: red">
                                    @Html.ValidationMessageFor(model => model.KortingsPercentage)
                                </div>
                            </div>
                        </div>
                        <div class="form-group">
                            <div class="col-sm-offset-2 col-sm-10">
                                <button type="submit" class="btn btn-default">Update</button>
                            </div>
                        </div>
                    </form>
                }
            </div>
        </div>
    </div>
}

<p>Date: <input type="text" class="datepicker"></p>
@model CBlokHerkansing.Models.Account.LoginModel

@{
    ViewBag.Title = "Register";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@using (Html.BeginForm("Register", "Account"))
{
    <div class="container">
        <div class="row">
            <div class="col-sm-6 col-md-4 col-md-offset-4">
                <h1 class="text-center login-title">Registreer uw account</h1>
                <form class="form-signin">
                    @Html.TextBoxFor(model => model.UserName, new { placeholder = "Gebruikersnaam", @class = "form-control" })
                    @Html.ValidationMessageFor(Model => Model.UserName)
                    @Html.TextBoxFor(model => model.PassWord, new { placeholder = "Wachtwoord", type = "password", @class = "form-control" }) <!-- TODO: Herhalen Wachtwoord-->
                    <br />
                    <button class="btn btn-lg btn-primary btn-block" type="submit">
                        Registreer <!-- TODO: Groen maken-->
                    </button>
                </form>
            </div>
        </div>
    </div>
}

@model CBlokHerkansing.Models.Account.Klant

@{
    ViewBag.Title = "KlantWijzigen";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@using (Html.BeginForm("WijzigKlant", "Account"))
{
    <div class="container">
        <div class="row">
            <div class="col-sm-6 col-md-6 col-md-offset-4">
                @if (Model != null)
                {
                    @Html.ValidationSummary(true)
                    <input type="hidden" value="@Model.Id" name="id" />
                    <input type="hidden" value="@Model.Email" name="email" />
                    <input type="hidden" value="@Model.Wachtwoord" name="wachtwoord" /> <!-- TODO: Bad bad bad bad, better to make a new model where wachtwoord isn't required?-->
                    <input type="hidden" value="@Model.GoldStatus" name="goldStatus" />
                    <input type="hidden" value="@Model.Rol" name="rol" />
                    <form class="form-horizontal">
                        <h1 class="text-center login-title">Wijzig uw klant gegevens</h1>
                        <div class="form-group">
                            <label for="inputEmail3" class="col-sm-2 control-label">Email</label>
                            <div class="col-sm-10">
                                @Html.TextBoxFor(model => model.Voornaam, new { placeholder = "Voornaam", @class = "form-control" })
                                <div style="color: red">
                                    @Html.ValidationMessageFor(model => model.Voornaam)
                                </div>
                            </div>
                        </div>
                        <div class="form-group">
                            <label for="inputPassword3" class="col-sm-2 control-label">Password</label>
                            <div class="col-sm-10">
                                @Html.TextBoxFor(model => model.Achternaam, new { placeholder = "Achternaam", @class = "form-control" })
                                <div style="color: red">
                                    @Html.ValidationMessageFor(model => model.Achternaam)
                                </div>
                            </div>
                        </div>
                        <div class="form-group">
                            <label for="inputPassword3" class="col-sm-2 control-label">Password</label>
                            <div class="col-sm-10">
                                @Html.TextBoxFor(model => model.Telefoonnummer, new { placeholder = "Telefoonnummer", @class = "form-control" })
                                <div style="color: red">
                                    @Html.ValidationMessageFor(model => model.Telefoonnummer)
                                </div>
                            </div>
                        </div>
                        <div class="form-group">
                            <div class="col-sm-offset-2 col-sm-10">
                                <button type="submit" class="btn btn-default">Update</button>
                            </div>
                        </div>
                    </form>
                }
            </div>
        </div>
    </div>
}


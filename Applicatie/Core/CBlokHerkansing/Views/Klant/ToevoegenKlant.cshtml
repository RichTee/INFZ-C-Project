@model CBlokHerkansing.Models.Klant.KlantBase

@{
    ViewBag.Title = "ToevoegenKlant";
}

<h2>ToevoegenKlant</h2>

@using (Html.BeginForm("ToevoegenKlant", "Klant"))
{
    <div class="container">
        <div class="row">
            <div class="col-sm-6 col-md-6 col-md-offset-4">
                <form class="form-horizontal">
                    <h1 class="text-center login-title">Vul gegevens in om een product detail toe te voegen.</h1>
                    <div class="form-group">
                        <label for="inputEmail3" class="col-sm-4 control-label">Email</label>
                        <div class="col-sm-6">
                            @Html.TextBoxFor(model => model.Email, new { placeholder = "Email", @class = "form-control" })
                            <div style="color: red">
                                @Html.ValidationMessageFor(model => model.Email)
                            </div>
                        </div>
                    </div>
                    <div class="form-group">
                        <label for="inputEmail3" class="col-sm-4 control-label">Voornaam</label>
                        <div class="col-sm-6">
                            @Html.TextBoxFor(model => model.Voornaam, new { placeholder = "Voornaam", @class = "form-control" })
                            <div style="color: red">
                                @Html.ValidationMessageFor(model => model.Voornaam)
                            </div>
                        </div>
                    </div>
                    <div class="form-group">
                        <label for="inputPassword3" class="col-sm-4 control-label">Achternaam</label>
                        <div class="col-sm-6">
                            @Html.TextBoxFor(model => model.Achternaam, new { placeholder = "Achternaam", @class = "form-control" })
                            <div style="color: red">
                                @Html.ValidationMessageFor(model => model.Achternaam)
                            </div>
                        </div>
                    </div>
                    <div class="form-group">
                        <label for="inputPassword3" class="col-sm-4 control-label">Telefoonnummer</label>
                        <div class="col-sm-6">
                            @Html.TextBoxFor(model => model.Telefoonnummer, new { placeholder = "Telefoonnummer", @class = "form-control" })
                            <div style="color: red">
                                @Html.ValidationMessageFor(model => model.Telefoonnummer)
                            </div>
                        </div>
                    </div>
                    <div class="form-group">
                        <label for="inputEmail3" class="col-sm-4 control-label">Wachtwoord</label>
                        <div class="col-sm-6">
                            @Html.TextBoxFor(model => model.Wachtwoord, new { placeholder = "Wachtwoord", type = "password", @class = "form-control" })
                            <div style="color: red">
                                @Html.ValidationMessageFor(model => model.Wachtwoord)
                            </div>
                        </div>
                    </div>
                    <div class="form-group">
                        <label for="input" class="col-sm-4 control-label">Wachtwoord Check</label>
                        <div class="col-sm-6">
                            @Html.TextBoxFor(model => model.WachtwoordCheck, new { placeholder = "Wachtwoord", type = "password", @class = "form-control" })
                            <div style="color: red">
                                @Html.ValidationMessageFor(model => model.WachtwoordCheck)
                            </div>
                        </div>
                    </div>
                    <div class="form-group">
                        <div class="col-sm-offset-2 col-sm-10">
                            <button type="submit" class="btn btn-default">Toevoegen</button>
                        </div>
                    </div>
                </form>
            </div>
        </div>
    </div>
}
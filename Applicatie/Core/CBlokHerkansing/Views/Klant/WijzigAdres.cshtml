@model CBlokHerkansing.Models.Klant.Adres

@{
    ViewBag.Title = "WijzigAdres";
}

@using (Html.BeginForm("WijzigAdres", "Klant"))
{
    <div class="container">
        <div class="row">
            <div class="col-sm-6 col-md-6 col-md-offset-4">
                @if (Model != null)
                {
                    @Html.ValidationSummary(true)
                    <input type="hidden" value="@Model.Id" name="id" />
                    <input type="hidden" value="@Model.GebruikerId" name="GebruikerId" />
                    <form class="form-horizontal">
                        <h1 class="text-center login-title">Wijzig uw adres gegevens</h1>
                        <div class="form-group">
                            <label for="inputEmail3" class="col-sm-4 control-label">Straat</label>
                            <div class="col-sm-6">
                                @Html.TextBoxFor(model => model.Straat, new { placeholder = "Straat", @class = "form-control" })
                                <div style="color: red">
                                    @Html.ValidationMessageFor(model => model.Straat)
                                </div>
                            </div>
                        </div>
                        <div class="form-group">
                            <label for="inputPassword3" class="col-sm-4 control-label">Postcode</label>
                            <div class="col-sm-6">
                                @Html.TextBoxFor(model => model.Postcode, new { placeholder = "Postcode", @class = "form-control" })
                                <div style="color: red">
                                    @Html.ValidationMessageFor(model => model.Postcode)
                                </div>
                            </div>
                        </div>
                        <div class="form-group">
                            <label for="inputPassword3" class="col-sm-4 control-label">Huisnummer</label>
                            <div class="col-sm-6">
                                @Html.TextBoxFor(model => model.Huisnummer, new { placeholder = "Huisnummer", @class = "form-control" })
                                <div style="color: red">
                                    @Html.ValidationMessageFor(model => model.Huisnummer)
                                </div>
                            </div>
                        </div>
                        <div class="form-group">
                            <label for="inputEmail3" class="col-sm-4 control-label">HuisnummerToevoegsel</label>
                            <div class="col-sm-6">
                                @Html.TextBoxFor(model => model.HuisnummerToevoegsel, new { placeholder = "Huisnummer Toevoegsel", @class = "form-control" })
                                <div style="color: red">
                                    @Html.ValidationMessageFor(model => model.HuisnummerToevoegsel)
                                </div>
                            </div>
                        </div>
                        <div class="form-group">
                            <label for="inputEmail3" class="col-sm-4 control-label">Stad</label>
                            <div class="col-sm-6">
                                @Html.TextBoxFor(model => model.Stad, new { placeholder = "Stad", @class = "form-control" })
                                <div style="color: red">
                                    @Html.ValidationMessageFor(model => model.Stad)
                                </div>
                            </div>
                        </div>
                        <div class="form-group">
                            <div class="col-sm-offset-2 col-sm-10">
                                <button type="submit" class="btn btn-default">Update</button>
                            </div>
                        </div>
                    </form>
                }
            </div>
        </div>
    </div>
}